<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BankApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="splashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>
    <style name="cursorColor" parent="">
        <item name="colorControlActivated">@color/blue</item>
    </style>
    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/blue</item>
    </style>
    <style name="cursorColorBlack" parent="">
        <item name="colorControlActivated">@color/black</item>
    </style>
    <style name="BottomNavItem" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/teal_700</item>
    </style>

</resources>